<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="Controllers.ReservationController">

   <VBox alignment="CENTER" spacing="10" prefWidth="400">
      <Label text="Reservation Form" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

      <HBox spacing="10" alignment="CENTER">
         <Label text="Price:"/>
         <TextField fx:id="priceField" promptText="Enter price" />
      </HBox>

      <HBox spacing="10" alignment="CENTER">
         <Label text="Promo Code:"/>
         <TextField fx:id="promoCodeField" promptText="Enter promo code" />
      </HBox>

      <HBox spacing="10" alignment="CENTER">
         <Label text="Discounted Price:"/>
         <TextField fx:id="discountedPriceField" promptText="Discounted price will be displayed here" editable="false"/>
      </HBox>

      <HBox spacing="10" alignment="CENTER">
         <Label text="Available Promo Code:"/>
         <TextField fx:id="codeavailble" promptText="Available promo code will be displayed here" editable="false"/>
      </HBox>

      <Button text="Apply Promo Code" onAction="#applyPromoCode"/>
      <Button text="Add Reservation" onAction="#addReservation"/>
   </VBox>

</AnchorPane>
