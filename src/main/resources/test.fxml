<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.ReservationController">

    <Label text="Reservation Details" />

    <HBox spacing="10">
        <Label text="Course Price:" />
        <TextField fx:id="priceField" promptText="Enter Course Price" />
    </HBox>

    <HBox spacing="10">
        <Label text="Promo Code:" />
        <TextField fx:id="promoCodeField" promptText="Enter Promo Code" />
      <TextField fx:id="codeavailble" />
    </HBox>

    <HBox spacing="10">
        <Label text="Discounted Price:" />
        <TextField fx:id="discountedPriceField" editable="false" />
    </HBox>

    <HBox spacing="10">
        <Button onAction="#applyPromoCode" text="Apply Promo Code" />
        <Button onAction="#addReservation" text="Add Reservation" />
    </HBox>
</VBox>
