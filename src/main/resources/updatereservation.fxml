<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>


<AnchorPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="Controllers.UpdateReservationController"
            prefHeight="400.0" prefWidth="600.0">

    <children>
        <Label layoutX="126.0" layoutY="14.0" text="Update Reservation" />
        <TextField fx:id="idTextField" layoutX="154.0" layoutY="57.0" promptText="ID" />
        <TextField fx:id="userIdTextField" layoutX="154.0" layoutY="87.0" promptText="User ID" />
        <TextField fx:id="courseIdTextField" layoutX="154.0" layoutY="118.0" promptText="Course ID" />
        <RadioButton fx:id="statusRadioButton" layoutX="154.0" layoutY="151.0" text="Status" />
        <DatePicker fx:id="dateDatePicker" layoutX="154.0" layoutY="190.0" promptText="Date" />
        <TextField fx:id="promoIdTextField" layoutX="154.0" layoutY="222.0" promptText="Promo ID" />
        <TextField fx:id="priceTextField" layoutX="154.0" layoutY="253.0" promptText="Price" />
        <Button fx:id="saveButton" layoutX="261.0" layoutY="292.0" mnemonicParsing="false" onAction="#saveReservation" text="Save" />
    </children>
</AnchorPane>
